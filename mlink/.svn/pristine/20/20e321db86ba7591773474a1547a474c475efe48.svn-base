<script>
    function showList() {
        var dis = $('.header .main ul.menu').css('display');
        if (dis == 'none')
            $('.header .main ul.menu').show();
        if (dis == 'block')
            $('.header .main ul.menu').hide();
    }
    window.onresize = function(){
        if($(window).width() > 1240){
            $('.header .main ul.menu').show();
        }else {
            $('.header .main ul.menu').hide();
        }
    }




</script>