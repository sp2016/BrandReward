<script src="js/dataTables.min.js"></script>
<script src="js/dataTables.semanticui.min.js"></script>
<script>
  $(".chosen").chosen();
  $('.d1').on('click',function(){
    var mydate = new Date();
    var y = mydate.getFullYear();
    var m = parseInt(mydate.getMonth()) + 1;
    var d = mydate.getDate();
    if (m < 10)
      m = '0' + m;
    if (d < 10)
      d = '0' + d;

    var today = y + '-' + m + '-' + d;

    var mydate = new Date();
    mydate.setDate(mydate.getDate() - 7);
    var y = mydate.getFullYear();
    var m = parseInt(mydate.getMonth()) + 1;
    var d = mydate.getDate();
    if (m < 10)
      m = '0' + m;
    if (d < 10)
      d = '0' + d;

    var lastday = y + '-' + m + '-' + d;

    $('#stime').val(lastday);
    $('#etime').val(today);
  })
  $('.d2').on('click',function(){
    var mydate = new Date();
    var y = mydate.getFullYear();
    var m = parseInt(mydate.getMonth()) + 1;
    var d = mydate.getDate();
    if (m < 10)
      m = '0' + m;
    if (d < 10)
      d = '0' + d;

    var today = y + '-' + m + '-' + d;

    var mydate = new Date();
    mydate.setDate(mydate.getDate() - 30);
    var y = mydate.getFullYear();
    var m = parseInt(mydate.getMonth()) + 1;
    var d = mydate.getDate();
    if (m < 10)
      m = '0' + m;
    if (d < 10)
      d = '0' + d;

    var lastday = y + '-' + m + '-' + d;

    $('#stime').val(lastday);
    $('#etime').val(today);
  })
  $(".dtpicker").datetimepicker({
    minView: "month",//设置只显示到月份
    format : "yyyy-mm-dd",//日期格式
    autoclose:true,//选中关闭
    todayBtn: true//今日按钮
  });
  $('.csv').bind("click",function(){
    var stime = $('#stime').val();
    var etime = $('#etime').val();
    var site = $('#site').val();
    var advertiser = $('#advertiser').val();
    var datatype = $('#datatype').val();
    var timetype = $('#timetype').val();
    var affiliate = $('#affiliate').val();
    var country = $('#country').val();
    var ctype = $('#ctype').val();
    var sitetype = $('#sitetype').val();
    if(stime == '' || etime == ''){
      alert('Time not null');
      return false;
    }
    window.location.href = 'process.php?act=PerformanceCsv_adv&sitetype='+sitetype+'&ctype='+ctype+'&country='+country+'&affiliate='+affiliate+'&advertiser='+advertiser+'&type=merchants&timetype='+timetype+'&datatype='+datatype+'&from='+stime+'&to='+etime+'&site='+site;
  })
  function tab(){
    var stime = $('#stime').val();
    var etime = $('#etime').val();
    var site = $('#site').val();
    var advertiser = $('#advertiser').val();
    var datatype = $('#datatype').val();
    var timetype = $('#timetype').val();
    var affiliate = $('#affiliate').val();
    var sitetype = $('#sitetype').val();
    var country = $('#country').val();
    var ctype = $('#ctype').val();
    $('#example').dataTable({
            "fnDrawCallback":function(data){
                var clicks = data.json.clicks;
                var sales = data.json.sales;
                var com = data.json.com;
                var order = data.json.order;
                var rob = data.json.rob;
                var robp = data.json.robp;
                var total = data.json.total;
                var adv = data.json.recordsFiltered;
                $('#adv').html(adv);
                $('#commission').html(com);
                $('#clicks').html(clicks);
                $('#sales').html(sales);
                $('#num').html(order);
                $('#rob').html(rob);
                $('#robp').html(robp);
                $('#totals').html(total);
            },
      "bServerSide": true,
      "bProcessing": true,
      "iDisplayLength": 20,
      "bPaginage":true,
      "aLengthMenu": [10, 20, 50, 100],
      'bFilter': false,
      'pagingType':'full_numbers',
      "ajax": {
        "url": "b_performance.php",
        "type":'POST',
        "data": {
          "table":1,
          'advertiser':advertiser,
          "stime":stime,
          "etime":etime,
          "datatype":datatype,
          "timetype":timetype,
          "affiliate":affiliate,
          "site":site,
          "country":country,
          "sitetype":sitetype,
          "ctype":ctype
        }
      },
      "aaSorting": [
        [1, "desc"],
      ],
      columns: [
        { "data": "alias","title":'<{if $smarty.get.type=="sites"}>Publisher<{elseif $smarty.get.type=="merchants"}>Advertiser<{else}>Publisher<{/if}>',"bSortable": false},
        { "data": "Sales","title":'Order Sales', "asSorting": [ "desc", "asc", "desc" ]},
        { "data": "Commission","title":'Commission',"asSorting": [ "desc", "asc", "desc" ]},
        { "data": "orders","title":'Order Num', "asSorting": [ "desc", "asc", "desc" ]},
        { "data": "clicks","title":'Total Clicks', "asSorting": [ "desc", "asc", "desc" ]},
        { "data": "realclicks","title":'<a href="javascript:void(0)" title="(Total Clicks - Robot)">Real Clicks</a>', "asSorting": [ "desc", "asc", "desc" ]},
        { "data": "rob","title":'Robot'},
        { "data": "robp","title":'May Be Robot'},
        { "data": "commrate","title":'<a href="javascript:void(0)" title="(commission/sales*100)">Commission.Rate</a>',"bSortable": false },
        { "data": "epc","title":'<a href="javascript:void(0)" title="(commission/clicks)">EPC</a>',"bSortable": false },
        { "data": "status","title":'Cooperation Status',"bSortable": false },
      ],
    })}
  tab();
  function changes(t){
    if(confirm("DO you really want to change support type?"))
    {
      var storeId = $(t).attr('val');
      var supportType = t.value;
      var data = {UpdateSupport:1,storeId:storeId,supportType:supportType};
      $.ajax({
        type: "post",
        url: "b_store.php",
        data:data,
        async: false,
        success: function (res) {
          if(res == 1){
            alert('Success!');
          }else {
            alert('Failed!');
          }
        },
        error:function(){
          alert('Failed!');
        }
      });
    }
    // console.log();
  }
  $('.search').bind("click",function(){
    $('#tbzone').html('<table id="example" class="ui celled table" cellspacing="0" width="100%"></table>');
    tab();
  })
  $('.sh').bind("click",function(){
    $('#tbzone').html('<table id="example" class="ui celled table" cellspacing="0" width="100%"></table>');
    tab();
  })
  $('#t1').bind("click",function(){
    $('#tbzone').html('<table id="example" class="ui celled table" cellspacing="0" width="100%"></table>');
    tab();
  })
  $('#t2').bind("click",function(){
    $('#tbzone').html('<table id="example" class="ui celled table" cellspacing="0" width="100%"></table>');
    tab();
  })
  function toThousands(num) {
    var num = (num || 0).toString(), result = '';
    while (num.length > 3) {
      result = ',' + num.slice(-3) + result;
      num = num.slice(0, num.length - 3);
    }
    if (num) { result = num + result; }
    return result;
  }

</script>
