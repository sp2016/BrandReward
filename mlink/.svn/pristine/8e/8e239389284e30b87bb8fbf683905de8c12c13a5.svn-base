<{include file="b_block_header.html"}>
<{include file="b_block_banner.html"}>
<!-- Include the plugin's CSS and JS: -->
<script type="text/javascript" src="js/bootstrap-multiselect.js"></script>
<link rel="stylesheet" href="css/bootstrap-multiselect.css" type="text/css"/>
<div>
    <div class="container-fluid" style="margin-top:30px;">
        <div style="text-align:center;margin-bottom:30px;">
            <h1>Advertiser partnership - Active</h1>
        </select>
        </div>
        <div class="row" style="padding:20px 0;">

            <div class="col-lg-12">
                
                <div class="panel panel-default">
                    <div class="panel-heading"><a href="b_tools_manage_crawl.php" target="_blank">Search</a></div>
                    <div class="panel-body">
                        <form id="form_content_search" method="post">
                            <div class="row">
                                <div class=" form-inline">
                                    <div class="col-lg-12 ">
                                        <div class="form-group dpm" style="position:relative;">
                                            Add Time:
                                           <input type="text" name="sdate" class="form-control datepicker" placeholder="Start Time" value="<{$search.sdate}>">
                                           <input type="text" name="edate" class="form-control datepicker" placeholder="End Time" value="<{$search.edate}>">
                                            Program Name:
                                            <input type="text" Name="program" class="form-control" value="<{$search.program}>" placeholder="Program">
                                            Network:
                                            <input type="text" Name="network" class="form-control" value="<{$search.network}>" placeholder="Network">
                                            HomePage:
                                            <input type="text" Name="homepage" class="form-control" value="<{$search.homepage}>" placeholder="Homepage">
                                            <div class="form-group" style="margin-right: 0px;">
                                                <div class="checkbox">
                                                    Country :
                                                </div>
                                                <select id="country" name="country[]" class="form-control" multiple="multiple">
                                                    <{foreach from=$countryArr key=k item=c}>
                                                    <option value="<{$c}>"
                                                    <{foreach from=$country item=t}>
                                                     <{if $t == $c}>selected<{/if}>
                                                    <{/foreach}>
                                                    ><{$k}></option>
                                                    <{/foreach}>
                                                </select>
                                            </div>
                                            <div class="form-group" style="margin-right: 0px;padding-top: 12px;">
                                                <div class="checkbox">
                                                    Current Status:
                                                </div>
                                                <select id="status" name="status" class="form-control">
                                                    <option  value="">ALL</option>
                                                    <option <{if $search.status == 'Content'}>selected<{/if}> value="Content">Content Only</option>
                                                    <option <{if $search.status == 'Promotion'}>selected<{/if}> value="Promotion">Promotion Only</option>
                                                    <option <{if $search.status == 'All'}>selected<{/if}> value="All">Content & Promotion</option>
                                                    <option <{if $search.status == 'Mixed'}>selected<{/if}> value="Mixed">Mixed</option>
                                                </select>
                                            <input type="submit" class="btn b-primary" value="Search">
                                            <input type="button" class="btn b-primary down" value="Download">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-striped" id="table_aff">
                            <thead>
                            <tr>
                                <th>ProgramName</th>
                                <th>Network</th>
                                <th>SupportType</th>
                                <th>Commission Value</th>
                                <th>Homepage</th>
                                <th>AddTime</th>
                            </tr>
                            </thead>
                            <{foreach from=$list item=value}>
                            <tr>
                                <td width="500px"><span style="width:200px;word-wrap:break-word;word-break:break-all;"><{$value.Name}></span></td>
                                <td><{$value.AffName}></td>
                                <td><{$value.SupportType}></td>
                                <td><{$value.cValue}></td>
                                <td width="500px">
                                    <span style="width:200px;word-wrap:break-word;word-break:break-all;"><{$value.Homepage}></span>
                                </td>
                                <td><{$value.AddTime}></td>
                            </tr>
                            <{/foreach}>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
<script type="application/javascript">
    $('.down').click(function(){
        var value = $('#form_content_search').serialize();
        window.open('<{$smarty.const.BASE_URL}>/process.php?act=PartnershipTempCsv&'+value);
    });
    $('#country').multiselect();
</script>
<{include file="b_block_footer.html"}>
