<script>

	$(function(){
		$(document).delegate("#changeGlobalSite","change",function(){
			$.ajax({
				type:"post",
				url:CON_BASE_URL+"/process.php",
				data:"act=changeGlobalSite&publisherAccountId="+$(this).val(),
				dataType:"json",
				async:false,
				success: function(res){
					if(res.code != 1){
						alert(res.msg);
					}
					window.location.reload();
				}
			});
		})
	})

</script>